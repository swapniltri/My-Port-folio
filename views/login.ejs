<%- include("partials/header") -%>
<div class="login">
  <div class="login-heading">
  <h1 class="header-heading-login">Don't keep your Secrets hidden , express it anonymously</h1>
  </div>
  <form class="login-form" action="/login" method="post">
    <div class="form-group">
      <label class="label" for="exampleInputEmail1">Username</label>
      <input type="text" class="form-control" id="formGroupExampleInput" aria-describedby="emailHelp" name="username">
      <p class="signup-warning"><%=signup%></p>
    </div>
    <div class="form-group">
      <label class="label" for="exampleInputPassword1">Password</label>
      <input type="password" class="form-control" id="exampleInputPassword1" name="password">
      <p class="signup-warning"><%=incpass%></p>
    </div>
    <br>
    <button type="submit" class="btn btn-primary btn-lg">Log-In</button>
    <a href="/signup" type="submit" class="btn btn-primary btn-lg">Sign-Up</a>
  </form>

</div>

<%- include("partials/footer") -%>